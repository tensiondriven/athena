<div class="flex h-full bg-white">
  <!-- Sidebar -->
  <div class="w-64 bg-white border-r border-gray-200 flex flex-col">
    <!-- Sidebar Header -->
    <div class="border-b border-gray-200 px-3 py-4 space-y-3">
      <!-- Navigation -->
      <div>
        <a 
          href={~p"/chat"}
          class="w-full flex items-center gap-2 px-2 py-1.5 text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-100 rounded-md transition-colors"
        >
          <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          Chat
        </a>
      </div>
      
      <!-- Page Header -->
      <div class="pt-1">
        <h2 class="text-sm font-semibold text-gray-800">Event Inspector</h2>
        <div class="flex items-center gap-1 mt-1">
          <span class="w-2 h-2 bg-green-400 rounded-full"></span>
          <span class="text-xs text-gray-600">Live • <%= @total_count %> events</span>
        </div>
      </div>
    </div>
    
    <!-- Filters & Controls -->
    <div class="flex-1 overflow-y-auto p-3">
      <!-- Search -->
      <div class="mb-4">
        <label class="block text-xs font-medium text-gray-700 uppercase tracking-wide mb-2">Search</label>
        <form phx-change="search" phx-submit="search">
          <input 
            type="text" 
            name="search_query" 
            value={@search_query || ""}
            placeholder="Search events..."
            class="w-full px-2 py-1.5 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500"
          />
        </form>
      </div>
      
      <!-- Event Type Filter -->
      <div class="mb-4">
        <label class="block text-xs font-medium text-gray-700 uppercase tracking-wide mb-2">Event Type</label>
        <form phx-change="filter_by_type">
          <select 
            name="event_type" 
            class="w-full px-2 py-1.5 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500"
          >
            <option value="">All types</option>
            <%= for {type, count} <- (@all_event_types || []) do %>
              <option value={type} selected={@selected_event_type == type}>
                <%= type %> (<%= count %>)
              </option>
            <% end %>
          </select>
        </form>
      </div>
      
      <!-- Quick Stats -->
      <div class="mb-4">
        <label class="block text-xs font-medium text-gray-700 uppercase tracking-wide mb-2">Quick Stats</label>
        <div class="space-y-1">
          <%= for {type, count} <- Enum.take(@all_event_types || [], 5) do %>
            <div class="flex justify-between items-center text-xs">
              <span class="text-gray-600 truncate"><%= type %></span>
              <span class="font-medium text-gray-900"><%= count %></span>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Actions -->
      <div class="space-y-2">
        <button 
          phx-click="refresh" 
          class="w-full px-3 py-2 text-sm bg-blue-600 hover:bg-blue-700 text-white rounded-md transition-colors"
        >
          ↻ Refresh
        </button>
        
        <%= if @search_query != "" || @selected_event_type != "" do %>
          <button 
            phx-click="clear_filters" 
            class="w-full px-3 py-2 text-sm bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-md transition-colors"
          >
            Clear Filters
          </button>
        <% end %>
        
        <%= if @selected_event_id do %>
          <button 
            phx-click="clear_selection" 
            class="w-full px-3 py-2 text-sm bg-red-100 hover:bg-red-200 text-red-700 rounded-md transition-colors"
          >
            ✕ Clear Selection
          </button>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main Content Area -->
  <div class="flex-1 flex flex-col">
    <!-- Header -->
    <div class="bg-white border-b border-gray-200 px-6 py-4">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-xl font-semibold text-gray-900">Event Inspector</h1>
          <p class="text-sm text-gray-600 mt-1">
            <span class="inline-flex items-center">
              <span class="w-2 h-2 bg-green-400 rounded-full mr-2"></span>
              Live • <%= @total_count %> total • <%= @filtered_count || 0 %> shown • Last updated <%= format_timestamp(@last_updated) %>
            </span>
          </p>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 overflow-y-auto p-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 h-full">
    <!-- Event Feed (Left Panel) -->
    <div class="bg-white border border-gray-200 rounded-lg flex flex-col h-[calc(100vh-10rem)]">
      <!-- Event Type Preview Bar -->
      <div class="bg-gray-50 px-4 py-3 border-b border-gray-200 flex-shrink-0">
        <div class="flex flex-wrap gap-2">
          <%= for {type, count} <- Enum.take(@all_event_types || [], 6) do %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              <%= type %> (<%= count %>)
            </span>
          <% end %>
          <%= if length(@all_event_types || []) > 6 do %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-700">
              +<%= length(@all_event_types || []) - 6 %> more
            </span>
          <% end %>
        </div>
      </div>

      <!-- Event List -->
      <div class="flex-1 overflow-y-auto">
        <%= if Enum.empty?(@events) do %>
          <div class="flex flex-col items-center justify-center h-full text-gray-500">
            <div class="text-6xl mb-4">📡</div>
            <p class="text-lg font-medium">No events found</p>
            <p class="text-sm">
              <%= if @search_query != "" || @selected_event_type != "" do %>
                Try adjusting your search or filters
              <% else %>
                Events will appear here as they're collected
              <% end %>
            </p>
          </div>
        <% else %>
          <%= for event <- @events do %>
            <div 
              class={"cursor-pointer border-b border-gray-200 hover:bg-gray-50 transition-colors #{if @selected_event_id == event.id, do: "bg-blue-50 border-blue-200", else: ""}"}
              phx-click="select_event" 
              phx-value-event_id={event.id}
            >
              <div class="p-4">
                <!-- Event Header -->
                <div class="flex items-start justify-between mb-2">
                  <div class="flex items-center space-x-3">
                    <div class={"w-3 h-3 rounded-full flex-shrink-0 #{event_type_color(event.event_type)}"}></div>
                    <div class="min-w-0 flex-1">
                      <p class="text-sm font-medium text-gray-900 truncate">
                        <%= event.event_type %>
                      </p>
                      <p class="text-xs text-gray-500 truncate">
                        <%= event.source_id %>
                      </p>
                    </div>
                  </div>
                  <div class="text-right flex-shrink-0">
                    <p class="text-xs text-gray-500">
                      <%= time_ago(event.timestamp) %>
                    </p>
                  </div>
                </div>

                <!-- Event Preview -->
                <%= if event.description do %>
                  <p class="text-sm text-gray-700 truncate mb-2">
                    <%= event.description %>
                  </p>
                <% end %>

                <!-- Claude Conversation Preview -->
                <%= if event.event_type == "claude_code.conversation.updated" && event.content do %>
                  <% last_line = String.split(String.trim(event.content), "\n") |> List.last() %>
                  <%= if last_line && last_line != "" do %>
                    <div class="bg-gray-100 p-2 rounded mb-2">
                      <p class="text-xs text-gray-600 mb-1">💬 Latest:</p>
                      <p class="text-sm text-gray-800 truncate font-mono">
                        <%= String.slice(last_line, 0, 100) %><%= if String.length(last_line) > 100, do: "..." %>
                      </p>
                    </div>
                  <% end %>
                <% end %>

                <!-- Payload Size Preview -->
                <%= if event.content do %>
                  <div class="flex items-center space-x-2 text-xs text-gray-500">
                    <span>📦 <%= Float.round(byte_size(event.content) / 1024, 1) %> KB</span>
                    <span>•</span>
                    <span>📄 <%= String.length(event.content) %> chars</span>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Details Panel (Right Panel) -->
    <div class="bg-white border border-gray-200 rounded-lg flex flex-col h-[calc(100vh-10rem)]">
      <%= if @selected_event_id do %>
        <% selected_event = Enum.find(@events, &(&1.id == @selected_event_id)) %>
        <%= if selected_event do %>
          <!-- Details Header -->
          <div class="px-6 py-4 border-b border-gray-200 flex-shrink-0">
            <div class="flex items-center space-x-3 mb-3">
              <div class={"w-4 h-4 rounded-full #{event_type_color(selected_event.event_type)}"}></div>
              <h2 class="text-lg font-semibold text-gray-900">
                <%= selected_event.event_type %>
              </h2>
            </div>
            <div class="grid grid-cols-2 gap-4 text-sm">
              <div>
                <label class="text-gray-600 font-medium">Source</label>
                <p class="text-gray-900"><%= selected_event.source_id %></p>
              </div>
              <div>
                <label class="text-gray-600 font-medium">Timestamp</label>
                <p class="text-gray-900"><%= format_timestamp(selected_event.timestamp) %></p>
              </div>
              <div>
                <label class="text-gray-600 font-medium">Event ID</label>
                <p class="text-gray-900 font-mono text-xs"><%= selected_event.id %></p>
              </div>
              <%= if selected_event.content do %>
                <div>
                  <label class="text-gray-600 font-medium">Payload Size</label>
                  <p class="text-gray-900"><%= Float.round(byte_size(selected_event.content) / 1024, 1) %> KB (<%= String.length(selected_event.content) %> chars)</p>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Details Content -->
          <div class="flex-1 overflow-y-auto p-6">
            <!-- Description -->
            <%= if selected_event.description do %>
              <div class="mb-6">
                <h3 class="text-sm font-semibold text-gray-900 mb-2">Description</h3>
                <p class="text-gray-700 bg-gray-50 p-3 rounded-lg">
                  <%= selected_event.description %>
                </p>
              </div>
            <% end %>

            <!-- Metadata -->
            <%= if map_size(selected_event.metadata) > 0 do %>
              <div class="mb-6">
                <h3 class="text-sm font-semibold text-gray-900 mb-3">Metadata</h3>
                <div class="space-y-3">
                  <%= for {key, value} <- selected_event.metadata do %>
                    <div class="bg-gray-50 p-3 rounded-lg">
                      <label class="text-xs font-medium text-gray-600 uppercase tracking-wider">
                        <%= key %>
                      </label>
                      <div class="mt-1">
                        <%= case value do %>
                          <% v when is_map(v) -> %>
                            <pre class="text-sm text-gray-800 font-mono whitespace-pre-wrap"><%= Jason.encode!(v, pretty: true) %></pre>
                          <% v when is_list(v) -> %>
                            <pre class="text-sm text-gray-800 font-mono whitespace-pre-wrap"><%= Jason.encode!(v, pretty: true) %></pre>
                          <% v -> %>
                            <p class="text-sm text-gray-800"><%= inspect(v) %></p>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- Raw JSON -->
            <div class="mb-6">
              <h3 class="text-sm font-semibold text-gray-900 mb-3">Raw Event Data</h3>
              <div class="bg-gray-900 p-4 rounded-lg overflow-x-auto">
                <pre class="text-green-400 text-sm font-mono"><%= format_json(%{
                  id: selected_event.id,
                  timestamp: selected_event.timestamp,
                  event_type: selected_event.event_type,
                  source_id: selected_event.source_id,
                  confidence: selected_event.confidence,
                  description: selected_event.description,
                  metadata: selected_event.metadata,
                  validation_errors: selected_event.validation_errors,
                  created_at: selected_event.created_at,
                  updated_at: selected_event.updated_at
                }) %></pre>
              </div>
            </div>

            <!-- System Timestamps -->
            <div class="border-t border-gray-200 pt-4 mt-6">
              <h3 class="text-sm font-semibold text-gray-900 mb-3">System Information</h3>
              <div class="grid grid-cols-1 gap-3 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600">Created</span>
                  <span class="text-gray-900 font-mono text-xs">
                    <%= format_timestamp(selected_event.created_at) %>
                  </span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Updated</span>
                  <span class="text-gray-900 font-mono text-xs">
                    <%= format_timestamp(selected_event.updated_at) %>
                  </span>
                </div>
                <%= if selected_event.validation_errors do %>
                  <div class="flex justify-between">
                    <span class="text-red-600">Validation Errors</span>
                    <span class="text-red-700 font-mono text-xs">
                      <%= inspect(selected_event.validation_errors) %>
                    </span>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% else %>
          <!-- Event not found -->
          <div class="flex-1 flex items-center justify-center text-gray-500">
            <div class="text-center">
              <div class="text-4xl mb-4">⚠️</div>
              <p class="text-lg font-medium">Event not found</p>
              <p class="text-sm">The selected event may have been removed</p>
            </div>
          </div>
        <% end %>
      <% else %>
        <!-- No selection -->
        <div class="flex-1 flex items-center justify-center text-gray-500">
          <div class="text-center">
            <div class="text-6xl mb-4">👈</div>
            <p class="text-lg font-medium">Select an event</p>
            <p class="text-sm">Click on an event from the list to view details</p>
          </div>
        </div>
      <% end %>
    </div>
      </div>
    </div>
  </div>
</div>