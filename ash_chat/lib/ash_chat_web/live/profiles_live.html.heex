<div class="flex flex-col h-screen bg-white relative"
     phx-drop-target={@uploads.quick_import.ref}>
  <.nav_menu current_page={:settings} />
  
  <!-- Drag & Drop Overlay -->
  <%= if @drag_over do %>
    <div class="absolute inset-0 bg-blue-500 bg-opacity-20 z-50 flex items-center justify-center"
         phx-dragenter="drag-enter"
         phx-dragleave="drag-leave">
      <div class="bg-white rounded-lg shadow-xl p-8 text-center">
        <svg class="w-16 h-16 text-blue-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
        </svg>
        <h3 class="text-xl font-medium text-gray-900 mb-2">Drop character file here</h3>
        <p class="text-gray-500">JSON or PNG character cards</p>
      </div>
    </div>
  <% end %>
  
  <!-- Hidden file input for drag & drop -->
  <form id="quick-import-form" phx-change="validate-quick-import" class="hidden">
    <.live_file_input upload={@uploads.quick_import} />
  </form>
  
  <div class="flex flex-1 bg-white overflow-hidden">
    <!-- Sidebar -->
    <div class="w-64 bg-white border-r border-gray-200 flex flex-col">
    <!-- Sidebar Header -->
    <div class="border-b border-gray-200 px-3 py-4">
      <h2 class="text-sm font-semibold text-gray-800">Configuration</h2>
    </div>
    
    <!-- Navigation Menu -->
    <div class="flex-1 overflow-y-auto p-3">
      <!-- Model Profiles Section -->
      <div class="mb-4">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-xs font-medium text-gray-700 uppercase tracking-wide">Model Profiles (<%= length(@personas) %>)</h3>
          <button
            phx-click="new_persona"
            class="p-1 hover:bg-gray-100 rounded-sm transition-colors"
            title="New Persona"
          >
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
          </button>
        </div>
        
        <div class="space-y-1">
          <%= for persona <- @personas do %>
            <div class="p-2 rounded-md hover:bg-gray-50 transition-colors group">
              <div class="flex justify-between items-start">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-1">
                    <span class="text-sm font-medium text-gray-700 truncate"><%= persona.name %></span>
                    <%= if persona.is_default do %>
                      <span class="inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        Default
                      </span>
                    <% end %>
                  </div>
                  <p class="text-xs text-gray-500"><%= persona.provider %></p>
                  <%= if persona.model do %>
                    <p class="text-xs text-blue-600 truncate">Model: <%= persona.model %></p>
                  <% end %>
                </div>
                <div class="opacity-0 group-hover:opacity-100 flex gap-1 ml-2">
                  <button
                    phx-click="edit_persona"
                    phx-value-id={persona.id}
                    class="p-1 hover:bg-gray-200 rounded-sm transition-all"
                    title="Edit persona"
                  >
                    <svg class="w-3 h-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  </button>
                  <button
                    phx-click="delete_persona"
                    phx-value-id={persona.id}
                    data-confirm="Are you sure?"
                    class="p-1 hover:bg-red-100 rounded-sm transition-all"
                    title="Delete persona"
                  >
                    <svg class="w-3 h-3 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          <% end %>
          
          <%= if @personas == [] do %>
            <div class="p-3 text-center">
              <div class="mb-2">
                <svg class="w-8 h-8 text-gray-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
                </svg>
              </div>
              <p class="text-xs text-gray-500 mb-2">No personas yet</p>
              <button
                phx-click="new_persona"
                class="text-xs text-blue-600 hover:text-blue-800"
              >
                Create first persona
              </button>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Agent Personas Section -->
      <div>
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-xs font-medium text-gray-700 uppercase tracking-wide">Agent Personas</h3>
          <button
            phx-click="new_system_prompt"
            class="p-1 hover:bg-gray-100 rounded-sm transition-colors"
            title="New System Prompt"
          >
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
          </button>
        </div>
        
        <div class="space-y-1">
          <%= for system_prompt <- @system_prompts do %>
            <div class="p-2 rounded-md hover:bg-gray-50 transition-colors group">
              <div class="flex justify-between items-start">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-1">
                    <span class="text-sm font-medium text-gray-700 truncate"><%= system_prompt.name %></span>
                    <%= if system_prompt.version do %>
                      <span class="text-xs text-blue-500">v<%= system_prompt.version %></span>
                    <% end %>
                    <%= unless system_prompt.is_active do %>
                      <span class="inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                        Inactive
                      </span>
                    <% end %>
                  </div>
                  <p class="text-xs text-blue-600 truncate">
                    Backend: <%= system_prompt.persona.name %>
                  </p>
                  <%= if system_prompt.description do %>
                    <p class="text-xs text-gray-500 truncate"><%= system_prompt.description %></p>
                  <% end %>
                </div>
                <div class="opacity-0 group-hover:opacity-100 flex gap-1 ml-2">
                  <button
                    phx-click="edit_system_prompt"
                    phx-value-id={system_prompt.id}
                    class="p-1 hover:bg-gray-200 rounded-sm transition-all"
                    title="Edit prompt"
                  >
                    <svg class="w-3 h-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  </button>
                  <button
                    phx-click="delete_system_prompt"
                    phx-value-id={system_prompt.id}
                    data-confirm="Are you sure?"
                    class="p-1 hover:bg-red-100 rounded-sm transition-all"
                    title="Delete prompt"
                  >
                    <svg class="w-3 h-3 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          <% end %>
          
          <%= if @system_prompts == [] do %>
            <div class="p-3 text-center">
              <div class="mb-2">
                <svg class="w-8 h-8 text-gray-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <p class="text-xs text-gray-500 mb-2">No prompts yet</p>
              <button
                phx-click="new_system_prompt"
                class="text-xs text-blue-600 hover:text-blue-800"
              >
                Create first prompt
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Area -->
  <div class="flex-1 flex flex-col">
    <!-- Header -->
    <div class="bg-white border-b border-gray-200 px-6 py-4">
      <div>
        <h1 class="text-xl font-semibold text-gray-900">Model Profiles & Agent Personas</h1>
        <p class="text-sm text-gray-600 mt-1">Configure AI model connections and define agent personalities.</p>
      </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 overflow-y-auto p-6">
      <!-- Agent Personas List -->
      <div class="max-w-5xl mx-auto">
        <!-- Header -->
        <div class="mb-6">
          <div class="flex items-center justify-between">
            <div>
              <h2 class="text-2xl font-semibold text-gray-900">Agent Personas</h2>
              <p class="text-sm text-gray-600 mt-1">Define unique personalities and behaviors for your AI agents</p>
            </div>
            <div class="flex gap-2">
              <button
                phx-click="show_import"
                class="inline-flex items-center gap-2 px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-lg transition-colors"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                </svg>
                Import Character
              </button>
              <button
                phx-click="new_system_prompt"
                class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                New Persona
              </button>
            </div>
          </div>
        </div>
        
        <!-- Personas Grid -->
        <%= if @system_prompts == [] do %>
          <!-- Empty State -->
          <div class="text-center py-12 px-6 bg-gray-50 rounded-lg border-2 border-dashed border-gray-300">
            <div class="mb-4">
              <svg class="w-16 h-16 text-gray-400 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No Agent Personas Yet</h3>
            <p class="text-gray-500 mb-6 max-w-md mx-auto">
              Create your first agent persona to define how your AI agents should behave and interact in conversations.
            </p>
            <button
              phx-click="new_system_prompt"
              class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Create Your First Persona
            </button>
          </div>
        <% else %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <%= for persona <- @system_prompts do %>
              <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-lg transition-shadow group">
                <!-- Header -->
                <div class="flex items-start justify-between mb-4">
                  <div class="flex-1">
                    <div class="flex items-center gap-2">
                      <h3 class="text-lg font-semibold text-gray-900"><%= persona.name %></h3>
                      <%= if persona.version do %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                          v<%= persona.version %>
                        </span>
                      <% end %>
                    </div>
                    <%= if persona.description do %>
                      <p class="text-sm text-gray-600 mt-1"><%= persona.description %></p>
                    <% end %>
                    <%= if persona.version_notes do %>
                      <p class="text-xs text-gray-500 mt-1 italic"><%= persona.version_notes %></p>
                    <% end %>
                  </div>
                  <!-- Status Badge -->
                  <%= if persona.is_active do %>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      Active
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      Inactive
                    </span>
                  <% end %>
                </div>
                
                <!-- Model Profile -->
                <div class="mb-4">
                  <span class="text-xs font-medium text-gray-500 uppercase tracking-wide">Model Profile</span>
                  <p class="text-sm text-gray-900 mt-1">
                    <%= if persona.persona do %>
                      <%= persona.persona.name %> 
                      <span class="text-gray-500">(<%= persona.persona.model %>)</span>
                    <% else %>
                      <span class="text-gray-400">No profile assigned</span>
                    <% end %>
                  </p>
                </div>
                
                <!-- Prompt Preview -->
                <div class="mb-4">
                  <span class="text-xs font-medium text-gray-500 uppercase tracking-wide">Prompt Preview</span>
                  <div class="mt-1 p-3 bg-gray-50 rounded-md">
                    <p class="text-sm text-gray-700 line-clamp-3">
                      <%= String.slice(persona.content || "", 0, 150) %><%= if String.length(persona.content || "") > 150, do: "..." %>
                    </p>
                  </div>
                </div>
                
                <!-- Actions -->
                <div class="flex items-center gap-2 pt-4 border-t border-gray-100">
                  <button
                    phx-click="edit_system_prompt"
                    phx-value-id={persona.id}
                    class="flex-1 inline-flex items-center justify-center gap-1 px-3 py-2 bg-white border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Edit
                  </button>
                  
                  <button
                    phx-click="duplicate_system_prompt"
                    phx-value-id={persona.id}
                    class="flex-1 inline-flex items-center justify-center gap-1 px-3 py-2 bg-white border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                    Duplicate
                  </button>
                  
                  <button
                    phx-click="delete_system_prompt"
                    phx-value-id={persona.id}
                    data-confirm="Are you sure you want to delete this persona?"
                    class="inline-flex items-center justify-center px-3 py-2 bg-white border border-red-300 rounded-md text-sm font-medium text-red-700 hover:bg-red-50 transition-colors"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  </button>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

  <!-- Persona Form Modal -->
  <%= if @show_persona_form do %>
    <div class="fixed inset-0 bg-gray-600 bg-opacity-50 flex items-center justify-center z-50">
      <div class="bg-white rounded-lg shadow-xl p-6 w-full max-w-md">
        <h3 class="text-lg font-medium text-gray-900 mb-4">
          <%= if @editing_persona, do: "Edit Persona", else: "New Persona" %>
        </h3>
        
        <.form for={@persona_form} phx-submit="save_persona" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
            <input
              type="text"
              name="persona[name]"
              value={@persona_form.data["name"] || ""}
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="e.g., Local Ollama"
            />
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Provider</label>
            <select
              name="persona[provider]"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
              <option value="">Select provider...</option>
              <option value="ollama" selected={@persona_form.data["provider"] == "ollama"}>Ollama</option>
              <option value="openai" selected={@persona_form.data["provider"] == "openai"}>OpenAI</option>
              <option value="anthropic" selected={@persona_form.data["provider"] == "anthropic"}>Anthropic</option>
            </select>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">URL (optional)</label>
            <input
              type="url"
              name="persona[url]"
              value={@persona_form.data["url"] || ""}
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="e.g., http://10.1.2.200:11434"
            />
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Model (optional)</label>
            <input
              type="text"
              name="persona[model]"
              value={@persona_form.data["model"] || ""}
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="e.g., qwen2.5:latest"
            />
          </div>
          
          <div class="flex items-center">
            <input
              type="checkbox"
              name="persona[is_default]"
              checked={@persona_form.data["is_default"] || false}
              class="mr-2"
            />
            <label class="text-sm text-gray-700">Set as default persona</label>
          </div>
          
          <div class="flex justify-end space-x-3 pt-4">
            <button
              type="button"
              phx-click="cancel_form"
              class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700"
            >
              Save Persona
            </button>
          </div>
        </.form>
      </div>
    </div>
  <% end %>

  <!-- System Prompt Form Modal -->
  <%= if @show_system_prompt_form do %>
    <div class="fixed inset-0 bg-gray-600 bg-opacity-50 flex items-center justify-center z-50">
      <div class="bg-white rounded-lg shadow-xl p-6 w-full max-w-2xl">
        <h3 class="text-lg font-medium text-gray-900 mb-4">
          <%= if @editing_system_prompt, do: "Edit System Prompt", else: "New System Prompt" %>
        </h3>
        
        <.form for={@system_prompt_form} phx-submit="save_system_prompt" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
            <input
              type="text"
              name="system_prompt[name]"
              value={@system_prompt_form.data["name"] || ""}
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
              placeholder="e.g., Helpful Assistant"
            />
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Description (optional)</label>
            <input
              type="text"
              name="system_prompt[description]"
              value={@system_prompt_form.data["description"] || ""}
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
              placeholder="Brief description of this prompt's purpose"
            />
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Backend Persona</label>
            <select
              name="system_prompt[persona_id]"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
            >
              <option value="">Select backend...</option>
              <%= for persona <- @personas do %>
                <option 
                  value={persona.id} 
                  selected={@system_prompt_form.data["persona_id"] == persona.id}
                >
                  <%= persona.name %> (<%= persona.provider %>)
                </option>
              <% end %>
            </select>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">System Prompt Content</label>
            <textarea
              name="system_prompt[content]"
              required
              rows="8"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
              placeholder="You are a helpful AI assistant..."
            ><%= @system_prompt_form.data["content"] || "" %></textarea>
          </div>
          
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Version (optional)</label>
              <input
                type="text"
                name="system_prompt[version]"
                value={@system_prompt_form.data["version"] || ""}
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
                placeholder="1.0"
              />
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Version Notes (optional)</label>
              <input
                type="text"
                name="system_prompt[version_notes]"
                value={@system_prompt_form.data["version_notes"] || ""}
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
                placeholder="What changed in this version"
              />
            </div>
          </div>
          
          <div class="flex items-center">
            <input
              type="checkbox"
              name="system_prompt[is_active]"
              checked={@system_prompt_form.data["is_active"] != false}
              class="mr-2"
            />
            <label class="text-sm text-gray-700">Active (available for use)</label>
          </div>
          
          <div class="flex justify-end space-x-3 pt-4">
            <button
              type="button"
              phx-click="cancel_form"
              class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700"
            >
              Save Prompt
            </button>
          </div>
        </.form>
      </div>
    </div>
  <% end %>
  </div>
</div>
</div>

<!-- Import Character Modal -->
<%= if @show_import_modal do %>
  <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
      <div class="p-6">
        <.live_component
          module={AshChatWeb.CharacterImportComponent}
          id="character-import"
          return_to={~p"/settings"}
        />
      </div>
    </div>
  </div>
<% end %>