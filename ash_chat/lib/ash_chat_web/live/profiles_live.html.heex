<div class="flex h-full bg-white">
  <!-- Sidebar -->
  <div class="w-64 bg-white border-r border-gray-200 flex flex-col">
    <!-- Sidebar Header -->
    <div class="border-b border-gray-200 px-3 py-4 space-y-3">
      <!-- Back to Chat -->
      <div>
        <a 
          href={~p"/chat"}
          class="w-full flex items-center gap-2 px-2 py-1.5 text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-100 rounded-md transition-colors"
        >
          <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Chat
        </a>
      </div>
      
      <!-- Page Header -->
      <div class="pt-1">
        <h2 class="text-sm font-semibold text-gray-800">Configuration</h2>
      </div>
    </div>
    
    <!-- Navigation Menu -->
    <div class="flex-1 overflow-y-auto p-3">
      <!-- Provider Profiles Section -->
      <div class="mb-4">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-xs font-medium text-gray-700 uppercase tracking-wide">Provider Profiles</h3>
          <button
            phx-click="new_profile"
            class="p-1 hover:bg-gray-100 rounded-sm transition-colors"
            title="New Profile"
          >
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
          </button>
        </div>
        
        <div class="space-y-1">
          <%= for profile <- @profiles do %>
            <div class="p-2 rounded-md hover:bg-gray-50 transition-colors group">
              <div class="flex justify-between items-start">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-1">
                    <span class="text-sm font-medium text-gray-700 truncate"><%= profile.name %></span>
                    <%= if profile.is_default do %>
                      <span class="inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        Default
                      </span>
                    <% end %>
                  </div>
                  <p class="text-xs text-gray-500"><%= profile.provider %></p>
                  <%= if profile.model do %>
                    <p class="text-xs text-blue-600 truncate">Model: <%= profile.model %></p>
                  <% end %>
                </div>
                <div class="opacity-0 group-hover:opacity-100 flex gap-1 ml-2">
                  <button
                    phx-click="edit_profile"
                    phx-value-id={profile.id}
                    class="p-1 hover:bg-gray-200 rounded-sm transition-all"
                    title="Edit profile"
                  >
                    <svg class="w-3 h-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  </button>
                  <button
                    phx-click="delete_profile"
                    phx-value-id={profile.id}
                    data-confirm="Are you sure?"
                    class="p-1 hover:bg-red-100 rounded-sm transition-all"
                    title="Delete profile"
                  >
                    <svg class="w-3 h-3 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          <% end %>
          
          <%= if @profiles == [] do %>
            <div class="p-3 text-center">
              <div class="mb-2">
                <svg class="w-8 h-8 text-gray-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
                </svg>
              </div>
              <p class="text-xs text-gray-500 mb-2">No profiles yet</p>
              <button
                phx-click="new_profile"
                class="text-xs text-blue-600 hover:text-blue-800"
              >
                Create first profile
              </button>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- System Prompts Section -->
      <div>
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-xs font-medium text-gray-700 uppercase tracking-wide">System Prompts</h3>
          <button
            phx-click="new_system_prompt"
            class="p-1 hover:bg-gray-100 rounded-sm transition-colors"
            title="New System Prompt"
          >
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
          </button>
        </div>
        
        <div class="space-y-1">
          <%= for system_prompt <- @system_prompts do %>
            <div class="p-2 rounded-md hover:bg-gray-50 transition-colors group">
              <div class="flex justify-between items-start">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-1">
                    <span class="text-sm font-medium text-gray-700 truncate"><%= system_prompt.name %></span>
                    <%= unless system_prompt.is_active do %>
                      <span class="inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                        Inactive
                      </span>
                    <% end %>
                  </div>
                  <p class="text-xs text-blue-600 truncate">
                    Backend: <%= system_prompt.profile.name %>
                  </p>
                  <%= if system_prompt.description do %>
                    <p class="text-xs text-gray-500 truncate"><%= system_prompt.description %></p>
                  <% end %>
                </div>
                <div class="opacity-0 group-hover:opacity-100 flex gap-1 ml-2">
                  <button
                    phx-click="edit_system_prompt"
                    phx-value-id={system_prompt.id}
                    class="p-1 hover:bg-gray-200 rounded-sm transition-all"
                    title="Edit prompt"
                  >
                    <svg class="w-3 h-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  </button>
                  <button
                    phx-click="delete_system_prompt"
                    phx-value-id={system_prompt.id}
                    data-confirm="Are you sure?"
                    class="p-1 hover:bg-red-100 rounded-sm transition-all"
                    title="Delete prompt"
                  >
                    <svg class="w-3 h-3 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          <% end %>
          
          <%= if @system_prompts == [] do %>
            <div class="p-3 text-center">
              <div class="mb-2">
                <svg class="w-8 h-8 text-gray-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <p class="text-xs text-gray-500 mb-2">No prompts yet</p>
              <button
                phx-click="new_system_prompt"
                class="text-xs text-blue-600 hover:text-blue-800"
              >
                Create first prompt
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Area -->
  <div class="flex-1 flex flex-col">
    <!-- Header -->
    <div class="bg-white border-b border-gray-200 px-6 py-4">
      <div>
        <h1 class="text-xl font-semibold text-gray-900">Profiles & System Prompts</h1>
        <p class="text-sm text-gray-600 mt-1">Manage AI provider backends and reusable system prompts for your agents.</p>
      </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 overflow-y-auto">
      <!-- Welcome/Overview Section -->
      <div class="flex items-center justify-center h-full">
        <div class="text-center max-w-lg px-6">
          <div class="mb-8">
            <svg class="w-20 h-20 text-gray-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          
          <h2 class="text-2xl font-semibold text-gray-700 mb-4">Configuration Management</h2>
          <p class="text-gray-500 mb-8">
            Use the sidebar to manage your AI provider profiles and system prompts. 
            Create backend configurations and reusable prompts for your agents.
          </p>
          
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-left">
            <div class="p-4 border border-gray-200 rounded-lg">
              <h3 class="font-medium text-gray-900 mb-2">Provider Profiles</h3>
              <p class="text-sm text-gray-600 mb-3">Configure AI backends like Ollama, OpenAI, and Anthropic with their connection details.</p>
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-700"><%= length(@profiles) %> profiles</span>
                <button
                  phx-click="new_profile"
                  class="text-blue-600 hover:text-blue-800 text-sm font-medium"
                >
                  + Add Profile
                </button>
              </div>
            </div>
            
            <div class="p-4 border border-gray-200 rounded-lg">
              <h3 class="font-medium text-gray-900 mb-2">System Prompts</h3>
              <p class="text-sm text-gray-600 mb-3">Create reusable system prompts that can be assigned to different AI agents.</p>
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-700"><%= length(@system_prompts) %> prompts</span>
                <button
                  phx-click="new_system_prompt"
                  class="text-green-600 hover:text-green-800 text-sm font-medium"
                >
                  + Add Prompt
                </button>
              </div>
            </div>
          </div>
          
          <%= if @profiles == [] and @system_prompts == [] do %>
            <div class="mt-8 p-4 bg-blue-50 border border-blue-200 rounded-lg">
              <h4 class="font-medium text-blue-900 mb-2">Getting Started</h4>
              <p class="text-sm text-blue-700 mb-3">
                Start by creating a provider profile, then add system prompts to define how your AI agents should behave.
              </p>
              <div class="flex flex-col sm:flex-row gap-2 justify-center">
                <button
                  phx-click="new_profile"
                  class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-md transition-colors"
                >
                  Create First Profile
                </button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  <!-- Profile Form Modal -->
  <%= if @show_profile_form do %>
    <div class="fixed inset-0 bg-gray-600 bg-opacity-50 flex items-center justify-center z-50">
      <div class="bg-white rounded-lg shadow-xl p-6 w-full max-w-md">
        <h3 class="text-lg font-medium text-gray-900 mb-4">
          <%= if @editing_profile, do: "Edit Profile", else: "New Profile" %>
        </h3>
        
        <.form for={@profile_form} phx-submit="save_profile" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
            <input
              type="text"
              name="profile[name]"
              value={@profile_form.data["name"] || ""}
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="e.g., Local Ollama"
            />
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Provider</label>
            <select
              name="profile[provider]"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
              <option value="">Select provider...</option>
              <option value="ollama" selected={@profile_form.data["provider"] == "ollama"}>Ollama</option>
              <option value="openai" selected={@profile_form.data["provider"] == "openai"}>OpenAI</option>
              <option value="anthropic" selected={@profile_form.data["provider"] == "anthropic"}>Anthropic</option>
            </select>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">URL (optional)</label>
            <input
              type="url"
              name="profile[url]"
              value={@profile_form.data["url"] || ""}
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="e.g., http://10.1.2.200:11434"
            />
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Model (optional)</label>
            <input
              type="text"
              name="profile[model]"
              value={@profile_form.data["model"] || ""}
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="e.g., qwen2.5:latest"
            />
          </div>
          
          <div class="flex items-center">
            <input
              type="checkbox"
              name="profile[is_default]"
              checked={@profile_form.data["is_default"] || false}
              class="mr-2"
            />
            <label class="text-sm text-gray-700">Set as default profile</label>
          </div>
          
          <div class="flex justify-end space-x-3 pt-4">
            <button
              type="button"
              phx-click="cancel_form"
              class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700"
            >
              Save Profile
            </button>
          </div>
        </.form>
      </div>
    </div>
  <% end %>

  <!-- System Prompt Form Modal -->
  <%= if @show_system_prompt_form do %>
    <div class="fixed inset-0 bg-gray-600 bg-opacity-50 flex items-center justify-center z-50">
      <div class="bg-white rounded-lg shadow-xl p-6 w-full max-w-2xl">
        <h3 class="text-lg font-medium text-gray-900 mb-4">
          <%= if @editing_system_prompt, do: "Edit System Prompt", else: "New System Prompt" %>
        </h3>
        
        <.form for={@system_prompt_form} phx-submit="save_system_prompt" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
            <input
              type="text"
              name="system_prompt[name]"
              value={@system_prompt_form.data["name"] || ""}
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
              placeholder="e.g., Helpful Assistant"
            />
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Description (optional)</label>
            <input
              type="text"
              name="system_prompt[description]"
              value={@system_prompt_form.data["description"] || ""}
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
              placeholder="Brief description of this prompt's purpose"
            />
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Backend Profile</label>
            <select
              name="system_prompt[profile_id]"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
            >
              <option value="">Select backend...</option>
              <%= for profile <- @profiles do %>
                <option 
                  value={profile.id} 
                  selected={@system_prompt_form.data["profile_id"] == profile.id}
                >
                  <%= profile.name %> (<%= profile.provider %>)
                </option>
              <% end %>
            </select>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">System Prompt Content</label>
            <textarea
              name="system_prompt[content]"
              required
              rows="8"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
              placeholder="You are a helpful AI assistant..."
            ><%= @system_prompt_form.data["content"] || "" %></textarea>
          </div>
          
          <div class="flex items-center">
            <input
              type="checkbox"
              name="system_prompt[is_active]"
              checked={@system_prompt_form.data["is_active"] != false}
              class="mr-2"
            />
            <label class="text-sm text-gray-700">Active (available for use)</label>
          </div>
          
          <div class="flex justify-end space-x-3 pt-4">
            <button
              type="button"
              phx-click="cancel_form"
              class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700"
            >
              Save Prompt
            </button>
          </div>
        </.form>
      </div>
    </div>
  <% end %>
</div>
</div>